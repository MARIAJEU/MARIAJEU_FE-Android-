        <receiver android:name=".SignUpActivity$SmsSentReceiver"
            android:exported="false"
            android:enabled="true">
            <intent-filter>
                <action android:name="SMS_SENT"/>
            </intent-filter>
        </receiver>

    </application>
</manifest>