<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/some_id"
        android:layout_width="433dp"
        android:layout_height="926dp"
        android:background="#4E286B"
        android:clipToOutline="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/splash_logo_iv"
        android:layout_width="148dp"
        android:layout_height="194dp"
        android:src="@drawable/ic_splash_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="373dp"

        />

    <ImageView
        android:id="@+id/splash_english_logo_tv"
        android:layout_width="200dp"
        android:layout_height="69dp"
        android:src="@drawable/mariajeu_english_logo_ver2"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/splash_logo_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/splash_simple_service_tv"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="당신을 위한 와인 안주 추천 서비스"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/splash_english_logo_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>