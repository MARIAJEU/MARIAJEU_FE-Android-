<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_mypage">

    <ImageView
        android:id="@+id/start_logo_iv"
        android:src="@drawable/ic_start_logo"
        android:layout_width="34.75dp"
        android:layout_height="45.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20.68dp"
        android:layout_marginTop="17dp"
        />

    <TextView
        android:id="@+id/mypage_login_tv"
        android:layout_width="36dp"
        android:layout_height="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:text="LOGIN"
        android:textSize="11dp"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/mypage_logout_tv"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:text="LOGOUT"
        android:textSize="11dp"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/tv_mypage_logo"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="93dp"
        android:text="My Page"
        android:textSize="32sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/start_simple_service_tv"
        android:layout_width="122dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toBottomOf="@id/tv_mypage_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="'간단한 서비스 설명'"
        android:textSize="14dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ib_mypage_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_login2_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_mypage_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_mypage_nickname"
        android:text="닉네임"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ib_mypage_profile"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_mypage_reservation"
        android:text="나의 예약"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_mypage_nickname"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"/>

    <ListView
        android:layout_width="330dp"
        android:layout_height="260dp"
        android:id="@+id/lv_mypage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_reservation"/>

</androidx.constraintlayout.widget.ConstraintLayout>