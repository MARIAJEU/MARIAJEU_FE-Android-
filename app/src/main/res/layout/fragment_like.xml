<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/searchFragment_id"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 로고 부분 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="220.62dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/light_purple" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_login_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="MARIAJEU"
        android:textColor="@color/white"
        android:textSize="23.22sp"
        android:textStyle="bold"
        android:paddingTop="72.16dp"
        android:paddingLeft="19.08dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="my pick"
        android:textColor="@color/white"
        android:textSize="23.22sp"
        android:textStyle="bold|italic"
        android:paddingTop="92.16dp"
        android:paddingLeft="19.08dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="내가 찜!한\n즐겨찾기 매장입니다 ★"
        android:textColor="@color/white"
        android:textSize="11.61sp"
        android:paddingTop="132.7dp"
        android:paddingLeft="19.08dp"/>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cnt_like_restaurant"
            android:text="0개의 매장"
            android:textSize="10sp"
            android:textColor="#50000000"
            android:paddingLeft="17dp"
            android:paddingTop="225dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_like_none"
            android:text="텅!"
            android:textSize="150sp"
            android:layout_marginTop="350dp"
            android:gravity="center_horizontal"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_like_none2"
            android:text="현재 내가 찜한 매장이 없습니다"
            android:textStyle="italic"
            android:layout_marginTop="550dp"
            android:gravity="center_horizontal"
            android:visibility="gone"/>

        <ListView
            android:id="@+id/lv_like"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="240dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>