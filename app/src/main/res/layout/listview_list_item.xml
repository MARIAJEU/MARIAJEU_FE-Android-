<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lv_item_img"
            android:layout_width="100.36dp"
            android:layout_height="95.38dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/light_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매장이름"
                android:textSize="11.61sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매장 소개 쏼라쏼라.. 프리미엄 스테이크~~"
                android:textSize="5.81sp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iv_star"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_listview_rating"
                    android:text="4.5"
                    android:textSize="5.81sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_listview_review"
                    android:text="(200)"
                    android:textSize="5.81sp"
                    android:layout_marginLeft="3dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iv_my_location"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 위치에서"
                    android:textSize="5.81sp"
                    android:layout_marginLeft="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300m"
                    android:textColor="#8B1A10"
                    android:textSize="5.81sp"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_listview_location"
                android:text="위치는 강남"
                android:textSize="5.81sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_listview_price"
                android:text="가격은 5만원~"
                android:textSize="5.81sp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.widget.Button
                    android:layout_width="30dp"
                    android:layout_height="9dp"
                    android:background="@drawable/ib_listview_reservation"
                    android:text="오후 6:00"
                    android:textSize="5.46sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"/>

                <android.widget.Button
                    android:layout_width="30dp"
                    android:layout_height="9dp"
                    android:background="@drawable/ib_listview_reservation"
                    android:text="오후 6:30"
                    android:textSize="5.46sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"/>

                <android.widget.Button
                    android:layout_width="30dp"
                    android:layout_height="9dp"
                    android:background="@drawable/ib_listview_reservation"
                    android:text="오후 7:00"
                    android:textSize="5.46sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"/>

                <android.widget.Button
                    android:layout_width="30dp"
                    android:layout_height="9dp"
                    android:background="@drawable/ib_listview_reservation"
                    android:text="오후 7:30"
                    android:textSize="5.46sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"/>

                <android.widget.Button
                    android:layout_width="30dp"
                    android:layout_height="9dp"
                    android:background="@drawable/ib_listview_reservation"
                    android:text="오후 8:00"
                    android:textSize="5.46sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>